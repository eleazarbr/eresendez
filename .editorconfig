# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

# HTML-Files, Blade-Files, Vue-Files, LESS-Files, SASS-Files, CSS-Files, JS-Files, JSON-Files
[{*.html,*.blade.php,*.vue,*.less,*.sass,*.css,*.js,*.json}]
indent_style = space
indent_size = 2

# Gitlab-CI, Travis-CI
[*.yml]
indent_style = space
indent_size = 2

